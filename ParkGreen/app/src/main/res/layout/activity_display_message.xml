<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mhacks8.parkgreen.DisplayMessageActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text=" Hi Driver, welcome on board, making Detroit a better place."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10pt" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:text="Your Driver Code:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1" />

            <TextView
                android:text="CODE_HERE"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView_Code"
                android:padding="5pt"
                android:clickable="false"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:text="Pair with NFC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_NFC"
            android:onClick="clickNFC"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10pt" />

        <TextView
            android:text="Get qualified for ParkGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="57dp">

            <TextView
                android:text="#passanger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_numPassanger"
                android:layout_weight="1"
                android:textAlignment="textEnd" />

            <TextView
                android:text="/1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <Button
            android:text="You are qualified for ParkGreen. Click here to see parking spots near you."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_park"
            android:layout_weight="1"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
