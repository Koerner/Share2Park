<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mhacks8.parkgreen.DisplayMessageActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="In order to qualify for ParkGreen, your passenger must upload your driver code as it appears on your screen."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0.02"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColorHighlight="@color/cast_expanded_controller_background_color"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textAlignment="center" />

        <TextView
            android:text="Your Driver Code:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textAllCaps="false"
            android:textStyle="normal|bold"
            android:scaleX="1.25"
            android:scaleY="1.25" />

        <TextView
            android:text="CODE_HERE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_Code"
            android:padding="5pt"
            android:clickable="false"
            android:textAlignment="center"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:textColor="@color/cast_expanded_controller_background_color" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02" />

        <TextView
            android:text="0/1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/@+id/numPassengers"
            android:textSize="@android:dimen/notification_large_icon_width"
            tools:scaleX=".5"
            android:scaleY=".5"
            android:textColor="@color/cast_expanded_controller_background_color" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02" />

        <TextView
            android:text="Passengers Checked In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_weight="0.06"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textAlignment="center" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.29" /><![CDATA[



        //   android:onClick="clickNFC"/>










    ]]>
    </LinearLayout>
</RelativeLayout>
